integer size: 14
if: $languages is not empty


--- ftd.row:
spacing: 4
$on-click$: toggle $open
$on-click-outside$: $open = false
z-index: 10


--- ftd.image: 
if: not $fpm.dark-mode
src: $light-lang-icon
move-up: 7
move-right: 50
anchor: window
left: 0
top: 0

--- ftd.image: 
if: $fpm.dark-mode
src: $dark-lang-icon
move-up: 7
move-right: 50
anchor: window
left: 0
top: 0


--- ftd.text: $current
if: $current is not null
